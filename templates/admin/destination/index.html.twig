{% extends 'base.html.twig' %}

{% block title %}Destination index
{% endblock %}

{% block body %}
    <div class="container pt-3">
        <h1>Destinations</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Ville</th>
                    {# <th>Lattitude</th>
                                    <th>Longitude</th> #}
                    {# <th>Id</th> #}
                    <th>Pays</th>
                    <th>Création</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for destination in destinations %}
                    <tr>
                        <td>{{ destination.ville }}</td>
                        {# <td>{{ destination.lat }}</td>
                                        <td>{{ destination.lng }}</td> #}
                        {# <td>{{ destination.id }}</td> #}
                        <td>{{ destination.pays.nom }}</td>
                        <td>{{ destination.created ? destination.created|date('d-m-Y') : '' }}</td>
                        <td>
                            <a href="{{ path('admin_destination_show', {'id': destination.id}) }}">Détails</a>
                            <a href="{{ path('admin_destination_edit', {'id': destination.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucune destination trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('admin_destination_new') }}">Créer une nouvelle destination</a>
    </div>
{% endblock %}
